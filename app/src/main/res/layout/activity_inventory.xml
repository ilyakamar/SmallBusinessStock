<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray"
    tools:context="com.test.amirelkayam.smallbusinessstock.activity.activity.Inventory">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="הזן שם מוצר לחיפוש"
        android:ems="10"

        android:id="@+id/editText_inventory"
        android:layout_alignBottom="@+id/button_find"
        android:layout_alignRight="@+id/edd_inventory"
        android:layout_alignEnd="@+id/edd_inventory" />

    <Button
        android:text="יצירת מלאי חדש"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edd_inventory"
        android:layout_below="@+id/editText_inventory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/find_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_find"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/editText_inventory"
        android:layout_toEndOf="@+id/editText_inventory" />


</RelativeLayout>

